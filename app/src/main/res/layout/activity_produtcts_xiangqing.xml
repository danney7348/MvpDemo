<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.lianxi0927.ProdutctsXiangqingActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/iv_xq_fanhui"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/tl"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            app:tabIndicatorColor="#000"
            app:tabGravity="center"
            app:tabSelectedTextColor="#cc0000"
            app:tabTextColor="#000000"
            app:tabMode="scrollable"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/iv_fenxiang"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bcm"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <LinearLayout
            android:id="@+id/kefu"
            android:orientation="vertical"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/ayp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="客服"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dianpu"
            android:orientation="vertical"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/dianpu"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="店铺"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/guanzhu"
            android:orientation="vertical"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_guanzhu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/guanzhu"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="客服"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/shapcar"
            android:orientation="vertical"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/shopcar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/joinshapcar"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#ff3300"
            android:text="加入购物车"
            android:textColor="#fff"
            />
    </LinearLayout>
</LinearLayout>
