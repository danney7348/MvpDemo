<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.lianxi0927.SouActivity">
    <LinearLayout
        android:background="#999999"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sy_title1"
        android:weightSum="8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/sy_saoyisao1"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/iv_saoasao1"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/saoyisao"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sy_sousuo1"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="6"
            >
            <EditText
                android:id="@+id/et_sssssss"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/ed_bg"
                android:drawableLeft="@mipmap/sousuo"
                android:drawableRight="@drawable/people"
                android:hint="海尔冰箱"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sy_xiaoxi1"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:text="搜索"
                android:gravity="center"
                android:id="@+id/tv_sousuo1"
                android:textColor="#ffffff"
                android:layout_width="40dp"
                android:layout_height="25dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_marginTop="10sp"
            android:id="@+id/iv_huan"
            android:textColor="#ffffff"
            android:src="@mipmap/a_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50sp"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <TextView
            android:id="@+id/tv_zonghe"
            android:layout_weight="1"
            android:layout_marginTop="5sp"
            android:text="综合"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_xiaoliang"
            android:layout_weight="1"
            android:text="销量"
            android:layout_marginTop="5sp"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_paixu"
            android:layout_weight="1"
            android:text="排序"
            android:layout_marginTop="5sp"
            android:textColor="#ff0000"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_shaixuan"
            android:layout_weight="1"
            android:text="筛选"
            android:layout_marginTop="5sp"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="40sp"
        android:layout_below="@+id/sy_title1"
        android:id="@+id/sou_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
