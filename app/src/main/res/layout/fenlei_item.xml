<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#ff1231"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sy_title"
        android:weightSum="8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/sy_saoyisao"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/iv_saoasao"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/saoyisao"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sy_sousuo"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="6"
            >
            <EditText
                android:id="@+id/et_ss"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/ed_bg"
                android:drawableLeft="@mipmap/sousuo"
                android:drawableRight="@drawable/people"
                android:hint="海尔冰箱"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sy_xiaoxi"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@drawable/xiaoxi"
                />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:layout_below="@+id/sy_title"
        android:id="@+id/left_fragment_listview"
        android:background="#ffffff"
        android:layout_width="100sp"
        android:layout_height="match_parent"></ListView>
    <FrameLayout
        android:id="@+id/fenlei_fl"
        android:layout_below="@+id/sy_title"
        android:layout_marginLeft="100sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>