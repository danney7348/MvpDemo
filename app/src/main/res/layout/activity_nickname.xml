<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.lianxi0927.NicknameActivity">
    <LinearLayout
        android:id="@+id/klkl"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_nc_back"
            android:src="@mipmap/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_zhanghushezhi"
            android:textSize="20sp"
            android:text="修改昵称"
            android:layout_marginLeft="150sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:layout_below="@+id/klkl"
        android:hint="请输入需要改成的昵称"
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/et_nickname"
        android:text="修改"
        android:id="@+id/btn_xiugai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
